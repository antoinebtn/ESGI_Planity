{% extends 'base.html.twig' %}

{% block title %}Réservation{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
            {% if error is defined %}
                <div class="alert alert-danger" role="alert">
                    {{ error }}
                </div>
            {% endif %}
            <div class="mx-5">
                <h1>Service: {{ service.name }}</h1>
                <h4>{{ service.cityCode }} {{ service.city }}</h4>
                <h4>{{ service.adress }}</h4>
                <h3>Prix: {{ service.price }}€</h3>
                <h3>Durée: {{ service.duration }}</h3>
                <p><strong>Description:</strong> {{ service.description }}</p>

                {{ form(form) }}
            </div>
        </div>
    </div>

{% endblock %}
