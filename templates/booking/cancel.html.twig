{% extends 'base.html.twig' %}

{% block title %}Réservation{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-3">

        </div>
        <div class="col-6">
            <div class="card">
                <div class="card-header">
                    Numéro de réservation: {{ booking.id }}
                </div>
                <div class="card-body">
                    <h5 class="card-title">{{ booking.service.name }}</h5>
                    <h6 class="card-text">Date: {{ booking.startDate | date() }} </h6>
                    <p class="card-text">Etes vous sûr de vouloir annuler la réservation </p>
                    <a href="{{ path('app_booking') }}" class="btn btn-secondary">Retour</a>
                    <a href="{{ path('app_booking_cancel_confirm', {'id': booking.id}) }}" class="btn btn-warning">Confirmer</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

